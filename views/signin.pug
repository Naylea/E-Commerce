include ./layouts/main.pug

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Deli Healthy 
        style.
            body{

                background-image: url("/signinbg.jpg");
                 /* Background image is centered vertically and horizontally at all times */
                background-position: center center;
                
                /* Background image doesn't tile */
                background-repeat: no-repeat;
                
                /* Background image is fixed in the viewport so that it doesn't move when 
                    the content's height is greater than the image's height */
                background-attachment: fixed;
                
                /* This is what makes the background image rescale based
                    on the container's size */
                background-size: cover;
                
                /* Set a background color that will be displayed
                    while the background image is loading */
                background-color: #464646;
                }
       
    body
    div(class='row')
        div(class='col-md-4 offset-md-4')
            div(class='card mt-4 text-center')
                div(class='card-header')
                    h3 Iniciar Sesión
                div(class='card-body')
                    form(align='center' action='/signin' method='POST')
                        div(class='form-group')
                        br
                        div(class='form-group')
                            label(for="email") Ingrese su correo :
                            input(type='email' name='email' placeholder='Email' class='form-control')
                        br
                        div(class='form-group')
                            label(for="password") Ingrese su contraseña : 
                            input(type='password' name='password' placeholder='Password' class='form-control')
                        br
                        button(type='submit' class="btn btn-primary btn-block mt-4") Iniciar Sesión
